{
  "name": "farfromhome.asia",
  "version": "1.0.0",
  "description": "farfromhome.asia website",
  "main": "index.js",
  "scripts": {
    "hugo:server": "hugo server --buildDrafts --buildFuture",
    "build:prod": "gulp images && hugo && npm run optimize:html && find public/images/ -name *.png -exec pngquant --verbose --force --out {} {} \\;",
    "deploy": "npm run build:prod && npm run s3_sync && npm run cf_invalidate_html",
    "s3_sync": "aws --region us-west-2 --profile farfromhome s3 sync --exclude .gitkeep --cache-control 'max-age=31536000' --storage-class REDUCED_REDUNDANCY --acl public-read public/ s3://farfromhome.asia/",
    "cf_invalidate_html": "aws --profile farfromhome cloudfront create-invalidation --distribution-id E31P5SGMZMYNB0 --paths '/*/' '/*.html' '/*.xml'",
    "cf_invalidate_all": "aws --profile farfromhome cloudfront create-invalidation --distribution-id E31P5SGMZMYNB0 --paths '/*'",
    "optimize:html": "./node_modules/.bin/html-minifier --input-dir ./public/ --output-dir ./public/ --file-ext html -c ./.html-minifier-config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielMuller/farfromhome.asia.git"
  },
  "keywords": [
    "website",
    "blog"
  ],
  "author": "Daniel Muller",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DanielMuller/farfromhome.asia/issues"
  },
  "homepage": "https://github.com/DanielMuller/farfromhome.asia#readme",
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-responsive": "^2.7.0",
    "html-minifier": "^3.4.1"
  }
}
